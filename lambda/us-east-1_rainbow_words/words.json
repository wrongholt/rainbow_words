{
    "type": "APL",
    "version": "1.0",
    "import": [
      {
        "name": "alexa-layouts",
        "version": "1.0.0"
      }
    ],
    "mainTemplate": {
      "parameters": [
        "datasource"
      ],"item": [
        {
            "type": "Container",
            "direction": "row",
            "alignItems": "center",
            "width": "100vw",
            "height": "100vh",
            "justifyContent": "center",
            
      "items": [
        {
          "type": "Image",
          "source": "${datasource.mainData.properties.bgImage}",
          "position": "absolute",
          "width": "100vw",
          "height": "100vh",
          "scale": "fill"
      },
        {
          "type": "Text",
          "text": "<b>${datasource.mainData.properties.title}</b>",
          "color": "#fff",
          "width": "70vw",
          "fontSize": "${datasource.mainData.properties.fontSize}",
          "textAlign": "center"
        }
      ]
    }
  ]
    }
  }